<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DeleteButton" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="RedButton" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">@color/bootstrap_gray_lightest</item>
        <item name="android:background">@color/bootstrap_brand_danger</item>
    </style>

    <style name="SuccessButton" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">@color/bootstrap_gray_lightest</item>
        <item name="android:background">@color/bootstrap_brand_success</item>
    </style>

    <style name="WarningButton" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">@color/bootstrap_gray_lightest</item>
        <item name="android:background">@color/bootstrap_brand_warning</item>
    </style>
</resources>
